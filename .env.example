# Telegram Bot Token
# Get your token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN="your-bot-token-here"

# MikroTik device passwords
# Format: MIKROTIK_<SLUG>_PASSWORD where slug is derived from device name in config.json
# Example: "Main Router" -> MIKROTIK_MAIN_ROUTER_PASSWORD
# Example: "Office" -> MIKROTIK_OFFICE_PASSWORD
MIKROTIK_MAIN_ROUTER_PASSWORD="your-password-here"

# Optional: MikroTik readonly passwords for non-admin Telegram users
# Format: MIKROTIK_<SLUG>_READONLY_PASSWORD
# Only needed if you have readonly_username configured for the device in config.json
# MIKROTIK_MAIN_ROUTER_READONLY_PASSWORD="your-readonly-password-here"

# MFA Configuration
# Master encryption key for TOTP secrets (required when MFA is enabled)
# Generate with: openssl rand -base64 32
# IMPORTANT: Keep this key secure and backed up!
MFA_ENCRYPTION_KEY="your-random-encryption-key-here"

# LOG_LEVEL = "DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"
LOG_LEVEL="INFO"
